
public class Robot {
    private int x;
    private int y;
    private char orientation; 

    public Robot() {
        this.x = 0;
        this.y = 0;
        this.orientation = 'N';
    }

    
    public void tournerDroite() {
        switch (orientation) {
            case 'N': orientation = 'E'; break;
            case 'E': orientation = 'S'; break;
            case 'S': orientation = 'O'; break;
            case 'O': orientation = 'N'; break;
            default: orientation = 'N';
        }
    }

    
    public void avancer() {
        avancer(1);
    }

  
    public void avancer(int nbPas) {
        if (nbPas < 0) return; 
     {
            case 'N': y += nbPas; break;
            case 'S': y -= nbPas; break;
            case 'E': x += nbPas; break;
            case 'O': x -= nbPas; break;
        }
    }

    public void afficher() {
        System.out.printf("Position: (%d, %d) â€” Orientation: %c%n", x, y, orientation);
    }

    
    public int getX() { return x; }
    public int getY() { return y; }
    public char getOrientation() { return orientation; }

    
    public void setPosition(int x, int y, char orientation) {
        this.x = x;
        this.y = y;
        this.orientation = orientation;
    }
}

public class TestRobot {
    public static void main(String[] args) {
        Robot r = new Robot(); 
        r.afficher();
        r.avancer(3); 
        
        r.tournerDroite(); 
        r.tournerDroite(); 
        r.tournerDroite(); 
        
        r.avancer(1); 
        r.afficher();

        
        System.out.println("x = -1 ? " + (r.getX() == -1));
        System.out.println("y = 3 ? " + (r.getY() == 3));
        System.out.println("Orientation Ouest ? " + (r.getOrientation() == 'O'));
    }
}

